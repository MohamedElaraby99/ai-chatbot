# Production Environment Variables for Backend
# Copy this file to .env for production deployment

# Environment
NODE_ENV=production

# MongoDB Connection (Use your production MongoDB URI)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname

# Server Configuration
PORT=5001

# Cookie Configuration (IMPORTANT: Change these secrets!)
COOKIE_SECRET=your-super-secret-cookie-secret-change-this-in-production
DOMAIN=.fikra.solutions

# JWT Secret (IMPORTANT: Use a strong secret!)
JWT_SECRET=your-super-secret-jwt-secret-change-this-in-production

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORGANIZATION_ID=your-openai-org-id-here

# Security (Optional but recommended)
TRUSTED_PROXIES=1
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100